generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuario {
  id_alumno Int @id @default(autoincrement())
  password String @unique @db.VarChar(250)
  correo  String @unique @db.VarChar(100)
  nombre String @db.VarChar(200)
  rut String @unique @db.Char(12)
  tipo_usuario Tipo_usuario
}


enum Tipo_usuario {
  JEFE_CARRERA
  ALUMNO_PRACTICA
  JEFE_DEPARTAMENTO
  SECRETARIA
  JEFE_EMPLEADOR
}
