{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",         // Carpeta de salida para los archivos compilados
    "rootDir": "./src",         // Carpeta raíz para los archivos fuente
    "incremental": true,        // Habilita la compilación incremental
    "declaration": true,        // Genera archivos .d.ts para soporte de tipos
    "sourceMap": false,         // Desactiva los mapas de fuente para producción
    "removeComments": true,     // Elimina comentarios del código compilado
    "emitDecoratorMetadata": true, // Necesario para NestJS
    "experimentalDecorators": true // Necesario para NestJS
  },
  "include": ["src/**/*.ts"],   // Incluye todos los archivos .ts en src/
  "exclude": [
    "node_modules", 
    "test", 
    "dist", 
    "**/*.spec.ts"
  ]
}
